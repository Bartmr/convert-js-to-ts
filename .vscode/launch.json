{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch ts-node",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
      "cwd": "${workspaceFolder}",
      "args": ["${file}"],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "convert-js-to-ts:ts-compiler",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
      "cwd": "${workspaceFolder}",
      "args": ["src/main.ts"],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}
